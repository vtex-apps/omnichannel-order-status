{
  "vendor": "vtex",
  "name": "omnichannel-order-status",
  "version": "0.1.3",
  "title": "B2B Order",
  "description": "Allows customers to view order status on standardized external APIs",
  "defaultLocale": "pt-BR",
  "builders": {
    "styles": "2.x",
    "messages": "1.x",
    "node": "4.x",
    "store": "0.x",
    "react": "3.x"
  },
  "dependencies": {
    "vtex.styleguide": "9.x",
    "vtex.css-handles": "0.x",
    "vtex.my-account-commons": "1.x",
    "vtex.my-account": "1.x",
    "vtex.format-currency": "0.x"
  },
  "settingsSchema": {
    "title": "Orders B2B",
    "type": "object",
    "properties": {
      "endpoint": {
        "title": "Link endpoint",
        "type": "string"
      },
      "user": {
        "title": "Login",
        "type": "string"
      },
      "token": {
        "title": "Token",
        "type": "string"
      }
    }
  },
  "policies": [
    {
      "name": "outbound-access",
      "attrs": {
        "host": "apivtex.vtex.com.br",
        "path": "*"
      }
    },
    {
      "name": "colossus-fire-event"
    },
    {
      "name": "colossus-write-logs"
    }
  ],
  "$schema": "https://raw.githubusercontent.com/vtex/node-vtex-api/master/gen/manifest.schema"
}
